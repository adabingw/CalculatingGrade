import java.util.stream.IntStream;

public class MainCalc {
	public static void main (String[] args) {
		Calculator C = new Calculator();
		int NUnits = C.AskNumberofUnits();
		int UnitW = C.CourseGradeCalc(NUnits);
		int[] unitweighted = new int[NUnits];
		for (int i = 0; i < C.NumberofUnits; i++) {
			unitweighted[i] = C.UnitGradeCalc() * C.UnitWeighting[i];
		}
		int sum = IntStream.of(unitweighted).sum();
		System.out.print("The final mark for this course is: " + sum);
	}
}

